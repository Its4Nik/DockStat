{
  "name": "dockstat",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "docker-up": "docker compose -f 'docker-compose.dev.yaml' up -d --remove-orphans",
    "docker-up:fg": "docker compose -f docker-compose.dev.yaml up --remove-orphans",
    "dev": "turbo run dev",
    "dev:dockstat": "bun run docker-up && bun run dev --filter=@dockstat/frontend --filter=@dockstat/api --filter=@dockstat/store-verification",
    "dev:dockstat/api": "bun run docker-up && bun run dev --filter=@dockstat/api",

    "lint": "turbo run lint",
    "lint:gh": "turbo run lint -- --reporter=github",
    "lint:fix": "turbo run lint:fix",

    "check-types": "turbo run check-types",
    "clean": "turbo run clean && rm -rf node_modules",

    "lint:all": "biome check .",
    "lint:all:ci": "biome check . --reporter=github",
    "lint:fix:all": "biome check --write --assist-enabled=true .",
    "format:all": "biome format --write .",
    "format:check:all": "biome format --check ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.3",
    "turbo": "^2.5.8",
    "typescript": "5.8.3"
  },
  "engines": {
    "bun": ">=1.2.17"
  },
  "overrides": {
    "elysia": "1.4.12",
    "@elysiajs/eden": "1.4.6"
  },
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@types/bun": "^1.3.1",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^19.2.2",
    "bun-plugin-dts": "^0.3.0",
    "js-yaml": "^4.1.0"
  }
}
