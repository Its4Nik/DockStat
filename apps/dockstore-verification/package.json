{
  "name": "dockstore-verification",
  "module": "src/index.tsx",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.tsx",
    "start": "bun run src/index.tsx",
    "build": "rm -r ./dist || true && bun build --target bun --sourcemap=inline --outdir=./dist --minify src/index.tsx",
    "build:docker": "bun run build && docker build -t dockstore-verification:latest .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@dockstat/logger": "workspace:*",
    "@dockstat/sqlite-wrapper": "workspace:*",
    "@dockstat/typings": "workspace:*",
    "@elysiajs/html": "^1.1.1",
    "@elysiajs/static": "^1.1.1",
    "@kitajs/html": "^4.2.5",
    "elysia": "1.4.12"
  }
}
