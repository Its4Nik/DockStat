{
  "name": {
    "type": "string"
  },
  "description": {
    "type": "string"
  },
  "version": {
    "type": "string"
  },
  "repository": {
    "type": "string"
  },
  "repoType": {
    "default": "local",
    "type": "string",
    "enum": [
      "local",
      "http",
      "github",
      "gitlab",
      "gitea",
      "default"
    ]
  },
  "manifest": {
    "type": "string"
  },
  "author": {
    "type": "object",
    "required": [
      "name",
      "license"
    ],
    "properties": {
      "name": {
        "type": "string"
      },
      "website": {
        "format": "uri",
        "type": "string"
      },
      "license": {
        "default": "MIT",
        "type": "string"
      },
      "email": {
        "format": "email",
        "type": "string"
      }
    }
  },
  "tags": {
    "type": "array",
    "items": {
      "type": "string"
    }
  }
}