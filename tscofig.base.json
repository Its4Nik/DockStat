{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dockstat/typings": ["packages/typings/src/index.ts"],
      "@dockstat/typings/*": ["packages/typings/src/*"],
      "@dockstat/backend": ["packages/dockstatapi/src/index.ts"],
      "@dockstat/backend/*": ["packages/dockstatapi/src/*"]
    },
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": [],
  "exclude": ["node_modules", "dist", "build"]
}
