{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ThemeOptions",
  "type": "object",
  "properties": {
    "backgroundAnimation": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "from": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "amplitude": {
          "type": "number"
        },
        "blend": {
          "type": "number"
        },
        "speed": {
          "type": "number"
        }
      },
      "required": ["enabled", "from"],
      "additionalProperties": false
    }
  },
  "required": ["backgroundAnimation"],
  "additionalProperties": false
}
