{
  "name": "Outline",
  "version": 1,
  "custom": false,
  "source": "https://github.com/Its4Nik/DockStacks",
  "compose_spec": {
    "services": {
      "outline": {
        "container_name": "outline",
        "restart": "always",
        "image": "docker.getoutline.com/outlinewiki/outline:latest",
        "env_file": "./docker.env",
        "ports": ["3001:3000"],
        "volumes": ["./storage-data:/var/lib/outline/data"],
        "depends_on": ["postgres", "redis"]
      },
      "redis": {
        "container_name": "redis",
        "restart": "always",
        "image": "redis",
        "env_file": "./docker.env",
        "ports": ["6379:6379"],
        "volumes": ["./redis.conf:/redis.conf"],
        "command": ["redis-server", "/redis.conf"],
        "healthcheck": {
          "test": ["CMD", "redis-cli", "ping"],
          "interval": "10s",
          "timeout": "30s",
          "retries": 3
        }
      },
      "postgres": {
        "container_name": "postgres",
        "restart": "always",
        "image": "postgres:16.4",
        "env_file": "./docker.env",
        "ports": ["5432:5432"],
        "volumes": ["./database-data:/var/lib/postgresql/data"],
        "healthcheck": {
          "test": ["CMD", "pg_isready", "-d", "outline", "-U", "user"],
          "interval": "30s",
          "timeout": "20s",
          "retries": 3
        },
        "environment": {
          "POSTGRES_USER": "user",
          "POSTGRES_PASSWORD": "secret",
          "POSTGRES_DB": "outline"
        }
      }
    }
  }
}
