{
  "name": "dockstat",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun --bun cross-env NODE_ENV=production react-router build --minify true ",
    "dev": "bun run --bun react-router dev",
    "start": "bun run --bun server.ts",
    "compile": "bun --bun build --compile --target=bun-linux-x64 --sourcemap ./server.ts --outfile build/server.bin && chmod +x build/server.bin",
    "typegen": "react-router typegen",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "lint:gh": "turbo run lint -- --reporter=github",
    "check-types": "bunx tsc --noEmit"
  },
  "dependencies": {
    "@dockstat/db": "workspace:*",
    "@dockstat/docker-client": "workspace:*",
    "@dockstat/logger": "workspace:*",
    "@dockstat/sqlite-wrapper": "workspace:*",
    "@dockstat/typings": "workspace:*",
    "@react-router/express": "^7.9.1",
    "@react-router/fs-routes": "^7.9.1",
    "@react-router/node": "^7.9.1",
    "@react-router/serve": "^7.9.1",
    "@types/dockerode": "^3.3.43",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "dockerode": "^4.0.8",
    "express": "^5.1.0",
    "isbot": "^5.1.30",
    "lucide-react": "^0.544.0",
    "morgan": "^1.10.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.1",
    "react-router-theme": "^1.2.1"
  },
  "devDependencies": {
    "@react-router/dev": "^7.9.1",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^20.19.14",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "cross-env": "^10.0.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
